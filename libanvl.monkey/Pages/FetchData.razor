@page "/fetchdata"
@using libanvl.monkey.Clients
@inject SourceApiHttpClient Http

<PageTitle>GitHub API Rate Limits</PageTitle>

<h1>Rate Limits</h1>

@if (limits == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Resource</th>
                <th>Limit</th>
                <th>Used</th>
                <th>Remaining</th>
                <th>Reset</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var limit in limits)
            {
                <tr>
                    <td>@limit.Resource</td>
                    <td>@limit.Limit</td>
                    <td>@limit.Used</td>
                    <td>@limit.Remaining</td>
                    <td>@limit.Reset</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Rate>? limits;

    protected override async Task OnInitializedAsync()
    {
        var rateLimits = await Http.GetRateLimitsAsync();
        limits = new()
            {
                rateLimits.Resources.Core,
                rateLimits.Resources.Graphql,
                rateLimits.Resources.Search,
                rateLimits.Resources.Integration_Manifest,
            };
    }
}
