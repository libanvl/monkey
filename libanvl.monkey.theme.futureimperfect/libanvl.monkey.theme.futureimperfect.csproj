<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <Description>FutureImperfect theme package for Monkey</Description>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\libanvl.monkey.components\libanvl.monkey.components.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Watch Include="**\*.scss" />
  </ItemGroup>

  <ItemGroup>
    <Watch Remove="Parts\AuthorTemplate.razor.scss" />
  </ItemGroup>

 <Target Name="ToolRestore" BeforeTargets="PreBuildEvent" Condition="'$(SkipWebCompiler)' != 'true'">
    <Exec Command="dotnet tool update excubo.webcompiler" StandardOutputImportance="high" />
  </Target>

  <Target Name="PreBuild" AfterTargets="ToolRestore" Condition="'$(SkipWebCompiler)' != 'true'">
    <Exec Command="dotnet tool run webcompiler -- -r . -c webcompilerconfiguration.json" StandardOutputImportance="high" />
  </Target>
</Project>
