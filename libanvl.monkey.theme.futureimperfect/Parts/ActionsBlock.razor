@implements IMonkeyActionsBlock

<ul class="actions @(Stacked ? "stacked" : null) @(Fit ? "fit" : null) @(Special ? "special" : null) @(Pagination ? "pagination" : null)">
  @ChildContent
</ul>

@code {

    [Parameter] public bool Stacked { get; set; }

    [Parameter] public bool Fit { get; set; }

    [Parameter] public bool Special { get; set; }

    [Parameter] public bool Pagination { get; set; }

    [Parameter] public RenderFragment? ChildContent { get; set; }
}
